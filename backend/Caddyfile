{
	email info@packetframe.com
}

packetframe.com {
	root * /home/nate/public/
	file_server

	route /api/* {
		uri strip_prefix /api
		reverse_proxy localhost:5000
	}

	log {
		output file /var/log/access-packetframe.log {
			roll_size 1gb
			roll_keep 1
			roll_keep_for 7d
		}
	}

	handle_errors {
		@404 {
			expression {http.error.status_code} == 404
		}
		redir @404 /#/404
		file_server
	}
}
